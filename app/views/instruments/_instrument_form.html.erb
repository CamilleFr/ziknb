<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container">
          <div class="row">
            <div class="col-xs-12 col-md-6">
              <h3 class="title-update-create"> Add an instrument</h3>
              <%= simple_form_for @instrument do |f| %>


                <%= f.input :title, label: false, placeholder: 'Title' %>
                <%= f.input :marque, include_blank: false, collection: Instrument::BRANDS, label: false %>
                <%= f.input :price, label: false, placeholder: 'Price' %>

                <div class="button-icons">
                  <h4>Category:</h4>
                  <% Instrument::CATEGORIES.each do |category| %>
                    <div>
                      <%= image_tag "#{category}.png", height: 30, data: {name: category} %>
                    </div>
                  <% end %>
                </div>

                <%= f.input :category, as: :hidden, label: false %>
                <%= f.input :description %>
                <%= f.input :photo %>
                <%= f.input :photo_cache, as: :hidden %>
                <%= f.button :submit, class: "btn-medium"%>
              <% end %>
            </div>

          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
