
<div class="container-dashboard">
  <div class="reservation" > <h2 style="margin-left: 30px;"> Reservations </h2>
  <% @locations.each do |location| %>
  <div class="message">
    <p class="price"> <%= @user.email %>/ </p>
    <p class="instru_title"> <%= location.instrument.title %> </p>
    <p class="date"><%= location.start_date %> - <%= location.end_date %> </p>
   <!--  <p class="status pending"> --Pending  </p> -->
  </div>
  </div>
  <%end %>

  <div class="historique"> <h2 style="margin-left: 30px;"> History</h2>
  </div>

  <div class="instrument_en_location"> <h2 style="margin-left: 30px;">My instruments</h2> <hr>
    <div class = "button" style="margin-left: 30px;">
     <%= link_to("create instrument", new_instrument_path, class: "btn btn-success") %>
    </div>
    <%  @instruments = @user.instruments  %>
  <% @instruments.each do |instrument|  %>
    <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= instrument.photo %>); backround-size:cover;">
        <div class="card-description">
          <h2><%= instrument.title %></h2>
          <p><%= instrument.marque %></p>
        </div>
      <a class="card-link" href="#" ></a>
    </div>
  <% end %>
  </div>
</div>


</div>

