<div class="container-dashboard" style="background-image:linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),url('<%= image_path "duotone.png" %>');">
  <div class="instrument_en_location"> <h2 style="margin-left: 30px;">My instruments</h2> <hr>
    <div class = "button" style="margin-left: 30px;">
     <%= link_to("create instrument", new_instrument_path, class: "btn btn-success") %>
    </div>
  <% @instruments.each do |instrument|  %>
    <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path instrument.photo if instrument.photo.present? %>'); background-size:cover;">
          <%= link_to instrument_path(instrument.id), method: :delete, :class => 'delete-link' do %>
           <i class='fas fa-trash-alt'></i>
          <% end %>
        <div class="card-description">
          <h2><%= instrument.title %></h2>
          <p><%= instrument.marque %></p>
        </div>
      <%= link_to '', instrument_path(instrument.id), class: "card-link" %>
    </div>
  <% end %>
  </div>

  <div class="colonne-droite">

    <div class="reservation" > <h2 style="margin-left: 30px;"> My bookings </h2>
    <% @locations.each do |location| %>

      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= location.instrument.photo %>); backround-size:cover;">

          <div class="card-description">
            <h2><%= location.instrument.title %></h2>
            <p><%= location.instrument.marque %></p>
            <h2>rent start: <%= location.start_date %></h2>
            <h2> rent end: <%= location.end_date %> </h2>
          </div>
        <%= link_to '', instrument_path(location.instrument.id), class: "card-link" %>
      </div>

    <%end %>
    </div>


    <div class="historique"> <h2 style="margin-left: 30px;"> History</h2>
    </div>
  </div>

</div>



