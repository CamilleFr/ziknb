<div class="container-dashboard" >

  <div class="instrument_en_location">
   <!--  <h2 style="margin-left: 20px;">My instruments </h3><hr> -->
      <div class="row">
<p> Add an Instrument <%= link_to new_instrument_path do %>
       <i class="fas fa-plus"></i>
    <% end %></p>

      <% @instruments.each do |instrument|  %>

        <div class="card_dashboard" style="background-image: url('<%= cl_image_path instrument.photo if instrument.photo.present? %>');">
          <%= link_to instrument_path(instrument.id), method: :delete, :class => 'delete-link' do %>
           <i class='fas fa-trash-alt'></i>
          <% end %>
          <%= link_to edit_instrument_path(instrument.id), :class => 'edit-link' do %>
           <i class="fas fa-pen"></i>
          <% end %>
          <div class="card-description">
            <h2><%= instrument.title %></h2>
            <p><%= instrument.marque %></p>
          </div>
          <%= link_to '', instrument_path(instrument.id), class: "card-link" %>
        </div>

      <% end %>
      </div>
  </div>

  <div class="reservation">

      <% @locations.each do |location| %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= location.instrument.photo %>);">
            <div class="card-description">
              <h2><%= location.instrument.title %></h2>
              <p><%= location.instrument.marque %></p>
              <h2><%= location.start_date %> - <%= location.end_date %></h2>
            </div>
          <%= link_to '', instrument_path(location.instrument.id), class: "card-link" %>
          <%= link_to instrument_location_path(location.instrument, location), method: :delete, :class => 'delete-link' do %>
            <i class='fas fa-trash-alt'></i>
      <% end %>
    </div>
    <%end %>
    </div>
</div>


    <div class="historique"> <h2 style="margin-left: 30px;"> History</h2>
    </div>
  </div>




